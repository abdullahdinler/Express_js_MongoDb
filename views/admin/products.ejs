<%- include('../includes/head') %>
 
    <link rel="stylesheet" href="/css/product.css" />
  </head>

  <body>
    <%- include('../includes/navigation') %>

    <main>
      <% if(prods.length > 0) { %>
      <div class="grid">
        <% prods.forEach(prods => { %>
        <article class="card product-item">
          <header class="card__header">
            <h1 class="product__title"><%= prods.title %> <%= prods.userId ? prods.userId.name : 'Unknown User' %></h1>
          </header>
          <div class="card__image">
            <img src="<%= prods.imageUrl %>" alt="<%= prods.title %>" />
          </div>
          <div class="card__content">
            <h2 class="product__price">$<%= prods.price %></h2>
            <p class="product__description"><%= prods.description %></p>
          </div>
          <div class="card__actions">
            <a class="btn" href="/admin/edit-product/<%= prods._id %>?edit=true">Edit</a>
            <form action="/admin/delete-product" method="post">
              <input type="hidden" name="productId" value="<%= prods._id %>" />
            <button class="btn">Delete</button>
            </form>
          </div>
        </article>
        <% }); %>
      </div>
      <% } else { %>
      <h1>No products found</h1>
      <% } %>
    </main>
    <%- include('../includes/end')%>
 
